<?xml version="1.0" encoding="utf-8"?>
<!-- layout for a conflict item using custom Helvetica Neue Thin font -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- conflict location text with Helvetica Neue Thin -->
    <TextView
        android:id="@+id/conflictLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/helvetica_neue_thin" />

    <!-- conflict fatalities text with red color and Helvetica Neue Thin -->
    <TextView
        android:id="@+id/conflictFatalities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/system_red"
        android:fontFamily="@font/helvetica_neue_thin"
        android:layout_marginTop="4dp" />

    <!-- conflict date text with secondary styling using Helvetica Neue Thin -->
    <TextView
        android:id="@+id/conflictDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="@font/helvetica_neue_thin"
        android:layout_marginTop="2dp" />

    <!-- divider to separate conflict items -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="8dp" />
</LinearLayout>