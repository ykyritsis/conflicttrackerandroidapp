<?xml version="1.0" encoding="utf-8"?>
<!-- layout for a single conflict item in the recycler view -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- displays the conflict location using the custom Helvetica Neue Thin font -->
    <TextView
        android:id="@+id/conflictLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/helvetica_neue_thin"
        android:textStyle="bold" />

    <!-- shows the number of fatalities with red color to indicate severity -->
    <TextView
        android:id="@+id/conflictFatalities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/system_red"
        android:fontFamily="@font/helvetica_neue_thin"
        android:layout_marginTop="2dp" />

    <!-- displays the event date with secondary text styling -->
    <TextView
        android:id="@+id/conflictDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="@font/helvetica_neue_thin"
        android:layout_marginTop="2dp" />

    <!-- a divider line to separate conflict items -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="8dp" />
</LinearLayout>