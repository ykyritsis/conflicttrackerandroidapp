<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ConflictTrackerAndroidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_grey</item>
        <item name="android:statusBarColor">@color/background_grey</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CardTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">-apple-system-thin</item>
    </style>

    <style name="Button.Indigo" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/indigo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">-apple-system-thin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>