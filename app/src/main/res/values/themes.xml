<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ConflictTrackerAndroidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_grey</item>
        <item name="android:statusBarColor">@color/background_grey</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="CardTitle" parent="AppTextSubtitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">-apple-system</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Modern" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/accent_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">-apple-system</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">0dp</item>
    </style>
</resources>