<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ConflictTrackerAndroidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/system_background</item>
        <item name="android:statusBarColor">@color/system_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">-apple-system</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/divider</item>
    </style>

    <style name="CardTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">-apple-system</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">-apple-system</item>
    </style>
</resources>